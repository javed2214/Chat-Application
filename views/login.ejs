        <div class="row">
            <div class="col s12 m8 l4 offset-m2 offset-l4">
                <div class="card">
                    <div class="card-action blue white-text center-align">
                        <h3>Login</h3>
                    </div>
                    <form action="/login" method="POST" autocomplete="off">
                        <div class="card-content">
                            <div class="form-field">
                                <label for="Email">Email</label>
                                <input type="email" name="email" required>
                            </div><br>
                            <div class="form-field">
                                <label for="Password">Password</label>
                                <input type="password" name="password" required>
                            </div><br>
                            <div class="form-field center-align">
                                <button type="submit" class="btn-large red">Submit</button>
                            </div><br>
                            <div class="form-field center-align">
                                <p>Don't have Account? &nbsp; <a href="/register">Register</a></p>
                            </div><br>
                        </div>
                    </form>
                </div>
                <div>
                    <% if (messages.error) { %>
                        <p class="center-align" style="color: red;"><%= messages.error %></p>
                    <% } %>
                </div>
            </div>
        </div>

    </div>
